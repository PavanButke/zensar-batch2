show databases;
use customer1;
create table customerInfo(ID int, Name Varchar(50), Salary int);
select * from customerInfo;
insert into customerInfo values(1,'A',55);
insert into customerInfo values(1,'A',45);
insert into customerInfo values(1,'A',65);
insert into customerInfo values(1,'A',20);
select * from customerInfo;
update customerInfo set ID= 2 where Salary=45;
update customerInfo set ID= 3 where Salary=65;
update customerInfo set ID= 4 where Salary=20;
update customerInfo set name= 'B' where Salary=45;
update customerInfo set name= 'C' where Salary=65;
update customerInfo set name= 'D' where Salary=20;
select * from customerInfo;
alter table customerInfo add Department varchar(255);
select * from customerInfo;
update customerInfo set Department= 'Mech' where salary=55;
update customerInfo set Department= 'Civil' where Salary=45;
update customerInfo set Department= 'CSE' where Salary=65;
update customerInfo set Department= 'IT' where Salary=20;
select * from customerInfo;
delete from customerInfo where ID= 4;
select * from customerInfo;
Drop table customerInfo;
